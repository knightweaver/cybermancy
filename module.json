{
  "type": "module",
  "id": "cybermancy",
  "title": "Cybermancy (Daggerheart Extension)",
  "description": "Cyberpunk/Shadowrun-flavored extension for Daggerheart: custom sheets, extra fields, roll helpers, and compendia.",
  "version": "0.0.9",
  "compatibility": {
    "minimum": "11",
    "verified": "13"
  },
  "authors": [
    { "name": "Dan Weaver", "url": "https://github.com/knightweaver" }
  ],
  "relationships": {
    "systems": [{ "id": "daggerheart" }]
  },
"packs": [
  { "name": "cybermancy-weapons",   "label": "Weapons",   "path": "packs/items/weapons.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-armors",   "label": "Armors",   "path": "packs/items/armors.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-loot",   "label": "Loot",   "path": "packs/items/loot.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-consumables",   "label": "Consumables",   "path": "packs/items/consumables.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-cybernetics",   "label": "Cybernetics",   "path": "packs/items/cybernetics.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-ammo",   "label": "Ammo",   "path": "packs/items/ammo.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-mods",   "label": "Weapon Mods",   "path": "packs/items/mods.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-drones-devices",   "label": "Drones & Devices",   "path": "packs/items/drones-devices.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-classes",   "label": "Classes",   "path": "packs/system/classes.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-subclasses",   "label": "Subclasses",   "path": "packs/system/subclasses.db",   "type": "Item",  "private": false },
  { "name": "cybermancy-domains", "label": "Domains", "path": "packs/system/domains.db", "type": "Item",  "private": false },
  { "name": "cybermancy-features", "label": "Features", "path": "packs/system/features.db", "type": "Item",  "private": false },
  { "name": "cybermancy-communities",  "label": "Communities",  "path": "packs/system/communities.db",  "type": "Item", "private": false },
  { "name": "cybermancy-adversaries",  "label": "Adversaries",  "path": "packs/adventures/adversaries.db",  "type": "Actor", "private": false },
  { "name": "cybermancy-environments",  "label": "Environments",  "path": "packs/adventures/environments.db",  "type": "Actor", "private": false }
],
  "packFolders": [
    {
      "name": "Cybermancy SRD",
      "sorting": "m",
      "folders": [
        {
          "name": "Items",
          "sorting": "a",
          "color": "599522",
          "packs": ["cybermancy-weapons", "cybermancy-armors", "cybermancy-loot", "cybermancy-consumables", "cybermancy-cybernetics", "cybermancy-drones-devices", "cybermancy-ammo", "cybermancy-mods"]
        },
        {
          "name": "System",
          "sorting": "a",
          "color": "7b404f",
          "packs": ["cybermancy-classes", "cybermancy-subclasses", "cybermancy-domains", "cybermancy-features", "cybermancy-communities"]
        },
        {
          "name": "Adventures",
          "sorting": "a",
          "color": "326977",
          "packs": ["cybermancy-adversaries", "cybermancy-environments", "cybermancy-ice"]
        }
      ]
    }
  ],
  "esmodules": ["scripts/main.js"],
  "styles": ["styles/cybermancy.css"],
  "languages": [
    { "lang": "en", "name": "English", "path": "lang/en.json" }
  ],
  "url": "https://github.com/knightweaver/cybermancy",
  "manifest": "https://github.com/knightweaver/cybermancy/releases/latest/download/module.json",
  "download": "https://github.com/knightweaver/cybermancy/releases/download/v0.0.9/cybermancy-v0.0.9.zip",
  "license": "LICENSE",
  "readme": "README.md"
}
