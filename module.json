{
  "type": "module",
  "id": "cybermancy",
  "title": "Cybermancy (Daggerheart Extension)",
  "description": "Cyberpunk/Shadowrun-flavored extension for Daggerheart: custom sheets, extra fields, roll helpers, and compendia.",
  "version": "0.0.6",
  "compatibility": {
    "minimum": "11",
    "verified": "13"
  },
  "authors": [
    { "name": "Dan Weaver", "url": "https://github.com/knightweaver" }
  ],
  "relationships": {
    "systems": [{ "id": "daggerheart" }]
  },
"packs": [
  { "name": "cybermancy-items",   "label": "Cybermancy Items",   "path": "packs/cybermancy-items",   "type": "Item",  "private": false },
  { "name": "cybermancy-domains", "label": "Cybermancy Domains", "path": "packs/cybermancy-domains", "type": "Item",  "private": false },
  { "name": "cybermancy-actors",  "label": "Cybermancy Actors",  "path": "packs/cybermancy-actors",  "type": "Actor", "private": false }
  ],
  "packFolders": [
    {
      "name": "Cybermancy Items",
      "sorting": "m",
      "folders": [
        {
          "name": "Weapons",
          "sorting": "a",
          "color": "000000",
          "packs": "items-weapons"
        },
        {
          "name": "Armors",
          "sorting": "a",
          "color": "000000",
          "packs": "items-armors"
        },
        {
          "name": "Loot",
          "sorting": "a",
          "color": "000000",
          "packs": "items-loot"
        },
        {
          "name": "Consumables",
          "sorting": "a",
          "color": "000000",
          "packs": "items-consumables"
        }
      ]
    }
  ],
  "esmodules": ["scripts/main.js"],
  "styles": ["styles/cybermancy.css"],
  "languages": [
    { "lang": "en", "name": "English", "path": "lang/en.json" }
  ],
  "url": "https://github.com/knightweaver/cybermancy",
  "manifest": "https://github.com/knightweaver/cybermancy/releases/latest/download/module.json",
  "download": "https://github.com/knightweaver/cybermancy/releases/download/v0.0.6/cybermancy-v0.0.6.zip",
  "license": "LICENSE",
  "readme": "README.md"
}
